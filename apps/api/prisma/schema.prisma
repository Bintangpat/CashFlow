generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  CASHIER
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum OtpType {
  SIGNUP
  LOGIN
  RESET_PASSWORD
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")  // Required for email+password auth
  emailVerified Boolean   @default(false) @map("email_verified")
  role          UserRole  @default(CASHIER)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  sales     Sale[]
  otpTokens OtpToken[]

  @@map("users")
}

model OtpToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  code      String
  type      OtpType
  expiresAt DateTime @map("expires_at")
  used      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
  @@index([code])
  @@map("otp_tokens")
}

model Product {
  id        String   @id @default(uuid())
  name      String
  sku       String?
  costPrice BigInt   @map("cost_price")
  sellPrice BigInt   @map("sell_price")
  stock     Int      @default(0)
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  saleItems       SaleItem[]
  stockReceivings StockReceiving[]

  @@index([name])
  @@map("products")
}

model Sale {
  id              String   @id @default(uuid())
  transactionDate DateTime @default(now()) @map("transaction_date")
  totalAmount     BigInt   @map("total_amount")
  totalProfit     BigInt   @map("total_profit")
  createdByUserId String   @map("created_by_user_id")
  createdAt       DateTime @default(now()) @map("created_at")

  user  User       @relation(fields: [createdByUserId], references: [id])
  items SaleItem[]

  @@index([transactionDate])
  @@map("sales")
}

model SaleItem {
  id                  String @id @default(uuid())
  saleId              String @map("sale_id")
  productId           String @map("product_id")
  productNameSnapshot String @map("product_name_snapshot")
  quantity            Int
  costPriceSnapshot   BigInt @map("cost_price_snapshot")
  sellPriceSnapshot   BigInt @map("sell_price_snapshot")

  sale    Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@index([saleId])
  @@map("sale_items")
}

model CashTransaction {
  id              String          @id @default(uuid())
  type            TransactionType
  category        String
  amount          BigInt
  notes           String?
  transactionDate DateTime        @map("transaction_date")
  createdAt       DateTime        @default(now()) @map("created_at")

  @@index([transactionDate])
  @@map("cash_transactions")
}

model StockReceiving {
  id          String   @id @default(uuid())
  productId   String   @map("product_id")
  quantity    Int
  costPerItem BigInt   @map("cost_per_item")
  totalCost   BigInt   @map("total_cost")
  notes       String?
  receivedAt  DateTime @default(now()) @map("received_at")
  createdAt   DateTime @default(now()) @map("created_at")

  product Product @relation(fields: [productId], references: [id])

  @@index([receivedAt])
  @@index([productId])
  @@map("stock_receivings")
}


